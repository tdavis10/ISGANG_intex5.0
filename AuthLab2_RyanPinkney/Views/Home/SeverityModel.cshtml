@{
    ViewData["Title"] = "Model";
}

@model CrashData

<!-- Page Content-->
<section class="py-5">
    <div class="container px-5 my-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-12">
                <div class="text-center mb-5">
                    <h1 class="fw-bolder">Crash Analyzer</h1>
                    <img src="~/img/CarCrashInfo.png" width="1200" />
                    <p class="lead fw-normal text-muted mb-0">Provide the following parameters to predict the severity of the resulting crash.</p>
                </div>
            </div>
        </div>
        <div class="row gx-5">

            <form method="post" asp-controller="Inference" asp-action="Score">
                <!-- Throw error message if invalid entries made -->
                @*<div asp-validation-summary="All"></div>*@

                <p>Please Select the Criteria:</p>

                <table class="table table-sm table-striped table-bordered">

                    <!-- Table Headers -->
                    <tr>
                        <th class="text-center">1</th>
                        <th class="text-center">2</th>
                        <th class="text-center">3</th>
                        <th class="text-center">4</th>
                        <th class="text-center">5</th>
                    </tr>
                    <tr>
                        <!-- 1 -->
                        <td>
                            <div class="form-group text-center">
                                <label asp-for="older_driver_involved_True">Older Driver?</label><br />
                                <select asp-for="older_driver_involved_True">
                                    <option value="1">Yes</option>
                                    <option value="0">No</option>
                                </select>
                            </div>
                        </td>

                        <!-- 2 -->
                        <td>
                            <div class="form-group text-center">
                                <label asp-for="county_name_DAVIS">Davis County?</label><br />
                                <select asp-for="county_name_DAVIS">
                                    <option value="1">Yes</option>
                                    <option value="0">No</option>
                                </select>
                            </div>
                        </td>

                        <!-- 3 -->
                        <td>
                            <div class="form-group text-center">
                                <label asp-for="route_15">Driving on I-15?</label><br />
                                <select asp-for="route_15">
                                    <option value="1">Yes</option>
                                    <option value="0">No</option>
                                </select>
                            </div>
                        </td>
                        <!-- 4 -->
                        <td>
                            <div class="form-group text-center">
                                <label asp-for="roadway_departure_True">Crash Off the Road?</label><br />
                                <select asp-for="roadway_departure_True">
                                    <option value="1">Yes</option>
                                    <option value="0">No</option>
                                </select>
                            </div>
                        </td>
                        <!-- 5 -->
                        <td>
                            <div class="form-group text-center">
                                <label asp-for="night_dark_condition_True">Driving at night?</label><br />
                                <select asp-for="night_dark_condition_True">
                                    <option value="1">Yes</option>
                                    <option value="0">No</option>
                                </select>
                            </div>
                        </td>

                    </tr>
                    <tr>
                        <!-- 1 -->

                        <td>
                            <div class="form-group text-center">
                                <label asp-for="city_OUTSIDE_CITY_LIMITS">Outside City Limits?</label><br />
                                <select asp-for="city_OUTSIDE_CITY_LIMITS">
                                    <option value="1">Yes</option>
                                    <option value="0">No</option>
                                </select>
                                <br />
                            </div>
                        </td>
                        <!-- 2 -->
                        <td>
                            <div class="form-group text-center">
                                <label asp-for="county_name_UTAH">Utah County?</label><br />
                                <select asp-for="county_name_UTAH">
                                    <option value="1">Yes</option>
                                    <option value="0">No</option>
                                </select>
                            </div>
                        </td>

                        <!-- 3 -->
                        <td>
                            <div class="form-group text-center">
                                <label asp-for="main_road_name_Other">Backroad?</label><br />
                                <select asp-for="main_road_name_Other">
                                    <option value="1">Yes</option>
                                    <option value="0">No</option>
                                </select>
                            </div>
                        </td>
                        <!-- 4 -->
                        <td>
                            <div class="form-group text-center">
                                <label asp-for="teenage_driver_involved_True">Teenage Driver?</label><br />
                                <select asp-for="teenage_driver_involved_True">
                                    <option value="1">Yes</option>
                                    <option value="0">No</option>
                                </select>
                            </div>
                        </td>

                        <!-- 5 -->
                        <td>
                            <div class="form-group text-center">
                                <label asp-for="distracted_driving_True">Distracted Driving?</label><br />
                                <select asp-for="distracted_driving_True">
                                    <option value="1">Yes</option>
                                    <option value="0">No</option>
                                </select>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <!-- 1 -->

                        <td>
                            <div class="form-group text-center">
                                <label asp-for="single_vehicle_True">Single Vehicle involved?</label><br />
                                <select asp-for="single_vehicle_True">
                                    <option value="1">Yes</option>
                                    <option value="0">No</option>
                                </select>
                            </div>
                        </td>
                        <!-- 2 -->

                        <td>
                            <div class="form-group text-center">
                                <label asp-for="county_name_SALT_LAKE">Salt Lake County?</label><br />
                                <select asp-for="county_name_SALT_LAKE">
                                    <option value="1">Yes</option>
                                    <option value="0">No</option>
                                </select>
                            </div>
                        </td>

                        <!-- 3 -->

                        <td>
                            <div class="form-group text-center">
                                <label asp-for="intersection_related_True">Crash at Intersection?</label><br />
                                <select asp-for="intersection_related_True">
                                    <option value="1">Yes</option>
                                    <option value="0">No</option>
                                </select>
                            </div>
                        </td>
                        <!-- 4 -->
                        <!-- 5 -->
                    </tr>
                </table>

                <!-- submission button -->
                <div class="text-center"><button type="submit" class="btn btn-sm btn-primary float-center">Submit</button></div>
                

            </form>

        </div>
    </div>
</section>
@{
}


<!-- Bring in the IEnumerable-->
@model IEnumerable<string>
<!-- Header -->
<h6 class="text-center">Filter by County:</h6>

<!-- Home button that clears the filter-->
<a asp-controller="Home" asp-action="Summary" asp-route-cityNames="" class="btn btn-outline-secondary col-12 m-2">Home</a>
<br />
<br />

<!-- Print out each name of the counties and dynamically build a link to filter-->
@foreach (string t in Model)
{
    <a asp-controller="Home" asp-action="Summary" asp-route-cityNames="@t"
       class="btn @(ViewBag.SelectedType == t ? "btn-primary col-12 m-2" : "btn-outline-secondary col-12 m-2")">@t</a> <!-- change the class btn type if selected-->
    <br />
    // This line is just like a if statement
} 